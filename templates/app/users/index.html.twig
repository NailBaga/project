{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}

    <h1>Users</h1>

    <div class="box">

    {% for user in users %}
        <table class="table table-bordered">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}<a href="{{ path('author_create', {'id': user.id }) }}" class="btn btn-primary">Add author</a></td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}<a href="{{ path('user_edit', {'id': user.id }) }}" class="btn btn-primary">Edit</a></td>
            </tr>
            <tr>
                <th>First name</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Last name</th>
                <td>{{ user.lastname }}</td>
            </tr>
            </tbody>
        </table>
        </div>

    {% endfor %}

{% endblock %}